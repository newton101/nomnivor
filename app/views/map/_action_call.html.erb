
<div class="hero-unit">
  <button class="close">&times;</button>
  <h1 class="logo"><%= image_tag "logo_400.png", :id => "logo", :alt => "Nomnivor" %></h1>
  <p id="tag-line">Eat out at the best diet-friendly and allergy-friendly fooderies</p>
  <p>
  <a href="#add-restaurant-modal" role="button" class="btn btn-primary btn-large" data-toggle="modal">Add Restaurant</a>
  <a role="button" id="find_me" class="btn btn-primary btn-large">Find Me</a>
  </p>
</div>

<div id="add-restaurant-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h3 id="myModalLabel">New Restaurant  </h3>
  </div>
  <div class="modal-body">
    <p><%= render "restaurants/form" %></p>
  </div>
</div>