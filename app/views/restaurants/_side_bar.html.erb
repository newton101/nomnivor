<div id="filterBar">
  <h5 class=filterHeader>Filter restaurants by diet: </h5>
  <%= form_tag("/restaurants", :method => "get", :class => "diets-filter") do %>
    <ul class="inline-checkboxes">
     <% @diets.each do |diet| %>
     <li>
        <span>
        <%= check_box_tag "diets[]", diet.id %>
        <%= label_tag "#{diet.name}" %>
        </span>
     </li>
    <% end %>
    </ul>
      <%= submit_tag("Find restaurants", :class => "sidebar-submit")%>
  <% end %>
</div>
   <div id="resultsContainer">
      <div id="resultsView">
        <div id="results">
          <ul class="recommendationList">
            <% @restaurants.each do |restaurant| %>
            <li class="card" data-id=<%= restaurant.venue_id %>>
              <div class="restaurantBlock">
                <%= restaurant.name %>
              </div>
              <div class="photoContainer">
              </div>
              <div class="cardDetails">
                <%= restaurant.description %>
              </div>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
